<?xml version="1.0" encoding="utf-8"?>
<log4net>
    <appender name="UnityDebugAppender" type="GameBrains.DebuggingTools.Log4Net.UnityDebugAppender">
        <layout type="log4net.Layout.PatternLayout, log4net">
            <conversionPattern value="%d{ABSOLUTE} %-5p %c{1}:%L - %m"/>
        </layout>
    </appender>
    <appender name="UnityDataPathAppender" type="GameBrains.DebuggingTools.Log4Net.UnityDataPathAppender">
        <layout type="log4net.Layout.PatternLayout, log4net">
            <conversionPattern value="%d{ABSOLUTE} %-5p %c{1}:%L - %m"/>
        </layout>
    </appender>
    <root>
        <level value="DEBUG"/>
        <appender-ref ref="UnityDebugAppender"/>
        <appender-ref ref="UnityDataPathAppender"/>
    </root>
</log4net>